#!/bin/bash

echo "compile in progress ..."

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

echo "BUILD_DIR: $BUILD_DIR"
echo "CACHE_DIR: $CACHE_DIR"
echo "ENV_DIR: $ENV_DIR"

echo "-----> Install cargo"
apt install --yes cargo

echo "-----> Compile the application"
cd $BUILD_DIR
cargo build --release
